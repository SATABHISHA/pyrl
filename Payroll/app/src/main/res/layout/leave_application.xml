<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/txt_application_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rl0"
            android:text="EL/36"
            android:textColor="#504E4E"
            android:textSize="17sp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/txt_emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_application_code1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rl0"
            android:text="Sick Leave"
            android:textColor="#000"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/txt_leave_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_emp_name"
            android:layout_toLeftOf="@id/rl0"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="02-Feb-2020 To 03-Feb-2020"
            android:textColor="#ADABAD"
            android:textSize="12sp">

        </TextView>
        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            >

            <TextView
                android:id="@+id/txt_total_days"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_total_days"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Day(s)"
                android:textColor="#777575"
                android:textSize="12sp">

            </TextView>



        </RelativeLayout>

        <TextView
            android:id="@+id/txt_leave_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_leave_date"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@id/rl0"
            android:text="Approved"
            android:textColor="#1e9547"
            android:textSize="15sp"
            android:textStyle="normal">


        </TextView>

    </RelativeLayout>

</LinearLayout>
