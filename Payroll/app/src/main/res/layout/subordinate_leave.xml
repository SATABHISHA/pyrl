<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/txt_application_code1"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:background="#D8D8D8"
            android:gravity="center"
            android:padding="8dp"
            android:text="EL/23"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txt_emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/txt_application_code1"
            android:text="Anirban Datta"
            android:textColor="#000"
            android:textSize="15sp">

        </TextView>
        <TextView
            android:id="@+id/txt_leave_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sick Leave"

            android:layout_toRightOf="@id/txt_application_code1"

            android:layout_below="@id/txt_emp_name"
            android:textSize="16sp"
            android:textColor="#7C000000"
            android:layout_marginLeft="5dp">

        </TextView>

        <TextView
            android:id="@+id/txt_leave_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-Feb-2020 To 03-Feb-2020"
            android:layout_toRightOf="@id/txt_application_code1"
            android:layout_below="@id/txt_leave_name"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:layout_marginTop="0dp"
            android:textColor="#b2b2b2"
            android:layout_marginLeft="5dp">

        </TextView>
        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            >
            <TextView
                android:id="@+id/txt_total_days"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="10.5dp"

                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp">

            </TextView>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Day(s)"
                android:layout_marginTop="2.5dp"
                android:layout_below="@id/txt_total_days"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="#777575"
                android:textSize="13sp">

            </TextView>



        </RelativeLayout>
        <TextView
            android:id="@+id/txt_leave_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved"
            android:layout_below="@id/txt_leave_date"
            android:layout_toRightOf="@id/txt_application_code1"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="1dp"
            android:textColor="#1e9547"
            android:layout_centerVertical="true">


        </TextView>

    </RelativeLayout>

</LinearLayout>
