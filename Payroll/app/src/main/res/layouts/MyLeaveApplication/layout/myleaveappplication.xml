<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_12"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/app"
            android:background="#2e5772"
            android:theme="@style/AppTheme.AppBarOverlay">

           <!-- <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2e5772"> -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/entry_form"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/activity_myleaveapplctn_odreqst_button_border_shape"
                        android:text="New"
                        android:textColor="#242424"
                        android:textSize="16sp"></Button>

                    <TextView
                        android:id="@+id/myleave_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/entry_form"
                        android:layout_toRightOf="@id/img_back"
                        android:text="My Leave Application"
                        android:textColor="#fff"
                        android:textSize="16sp"></TextView>

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/backarrow" />

                    <!--                    <ImageView-->
                    <!--                        android:layout_width="40dp"-->
                    <!--                        android:layout_height="40dp"-->
                    <!--                        android:layout_toLeftOf="@id/entry_form"-->
                    <!--                        android:src="@drawable/list"-->
                    <!--                        android:layout_marginRight="10dp"-->
                    <!--                        android:id="@+id/img_list">-->
                    <!--                    </ImageView>-->
                </RelativeLayout>


          <!--  </androidx.appcompat.widget.Toolbar> -->
            <!-- android:background="?attr/colorPrimary"-->

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ListView
                android:id="@+id/lv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>



        </LinearLayout>







    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>