<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cordinatorLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2e5772"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2e5772"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
            <!-- android:background="?attr/colorPrimary"-->

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:background="#F3F2F0"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Linear"
                android:orientation="vertical">

                <!--Employee Details, code starts -->
               <RelativeLayout
                   android:id="@+id/rl_emp_detail"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_marginTop="20dp"
                   android:background="#56D1F9">

                   <RelativeLayout
                       android:id="@+id/emp_detail_title_bar"
                       android:layout_width="match_parent"
                       android:layout_height="44dp"
                       android:background="#BFBFBF">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="8dp"
                           android:text="Employee Detail"
                           android:textColor="#ffffff"
                           android:textSize="17sp" />
                   </RelativeLayout>
                   <LinearLayout
                       android:id="@+id/ll_emp_detail"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/emp_detail_title_bar"
                       android:layout_marginTop="6dp"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/txt_emp_name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="B Banerjee"
                           android:textSize="20sp"
                           android:layout_marginLeft="8dp"
                           android:textColor="#356B8C"/>
                       <TextView
                           android:id="@+id/txt_designation"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="SR MANAGER"
                           android:textSize="15sp"
                           android:layout_marginLeft="8dp"
                           android:textColor="#7B7B7B"/>
                       <TextView
                           android:id="@+id/txt_department"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Demo India"
                           android:textSize="15sp"
                           android:layout_marginLeft="8dp"
                           android:textColor="#7B7B7B"/>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/txt_corid"
                       android:layout_below="@id/emp_detail_title_bar"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="8dp"
                       android:layout_marginTop="14dp"
                       android:layout_width="90dp"
                       android:layout_height="30dp"
                       android:text="Arb002"
                       android:gravity="center"
                       android:background="#E6C862"
                       android:textColor="#000000"/>

                   <!--Sup1 Details -->
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20.33dp"
                       android:layout_below="@+id/ll_emp_detail"
                       android:layout_marginLeft="8dp"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Supervisor 1"
                           android:textColor="#000000"
                           android:textSize="17sp"/>
                       <TextView
                           android:id="@+id/txt_supervisor1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="B Banerjee"
                           android:textColor="#7B7B7B"
                           android:textSize="15sp"/>
                   </LinearLayout>

                   <!--Sup2 Details -->
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20.33dp"
                       android:layout_below="@+id/ll_emp_detail"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="8dp"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Supervisor 1"
                           android:textColor="#000000"
                           android:textSize="17sp"/>
                       <TextView
                           android:id="@+id/txt_supervisor2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="B Banerjee"
                           android:textColor="#7B7B7B"
                           android:textSize="15sp"/>
                   </LinearLayout>

               </RelativeLayout>
                <!--Employee Details, code ends -->

                <!--Attendance Details, code starts -->
                <RelativeLayout
                    android:id="@+id/rl_attendance_detail"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#56D1F9">

                    <RelativeLayout
                        android:id="@+id/rl_attendance_detail_title_bar"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="#BFBFBF">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="Attendance Detail"
                            android:textColor="#ffffff"
                            android:textSize="17sp" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="13-Apr-2022"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:background="#898A8A"
                            android:textSize="17sp" />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_wkh_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:background="#c2c2c2"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="13dp"
                        android:layout_below="@id/rl_attendance_detail_title_bar"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:orientation="vertical">
                            <CheckBox
                                android:id="@+id/chck_wrk_frm_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#6C6C6C"
                                android:textSize="10sp"
                                android:text="Work\nFrom\nHome"/>
                        </LinearLayout>
                        <EditText
                            android:layout_width="195dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:inputType="textMultiLine"
                            android:padding="5dp"
                            android:textColor="#7A7979"
                            android:background="@drawable/layout6"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_below="@id/rl_attendance_detail_title_bar"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="13dp"
                        android:background="#F41515">
                        <TextView
                            android:id="@+id/tv_in_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="30dp"
                            android:layout_centerInParent="true"
                            android:text="OUT"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="301dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_wkh_detail"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#DADADA"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="IN"
                            android:textColor="#8C8B8C"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#A2A2A2" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="OUT"
                            android:textColor="#8C8B8C"
                            android:textSize="20sp" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#ffffff"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/ll_in_time"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txt_in_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="#B7E500"
                                    android:text="05:48"/>
                                <TextView
                                    android:id="@+id/txt_in_time_abbrebiation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="12sp"
                                    android:textColor="#74706E"
                                    android:text="AM"/>
                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#DADADA"/>

                            <LinearLayout
                                android:id="@+id/ll_out_time"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txt_out_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="#F47960"
                                    android:text="05:48"/>
                                <TextView
                                    android:id="@+id/txt_out_time_abbrebiation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="12sp"
                                    android:textColor="#74706E"
                                    android:text="PM"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <!--Attendance Details, code ends -->

                <!--Calendar Details, code starts -->
                <RelativeLayout
                    android:id="@+id/rl_calendar_detail"
                    android:layout_width="match_parent"
                    android:layout_height="460dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="20dp"
                    android:background="#56D1F9">

                    <LinearLayout
                        android:id="@+id/ll_date"
                        android:layout_width="match_parent"
                        android:layout_height="321dp"
                        android:background="#ffffff"
                        android:orientation="vertical" />
                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_date"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:text="13-Apr-2022"/>
                    <TextView
                        android:id="@+id/txt_day_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_date"
                        android:layout_marginTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:text="Wednesday"/>

                    <TextView
                        android:id="@+id/txt_holiday_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_day_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:text="Good Friday"
                        android:textColor="#FB4E4E"
                        android:textSize="14sp" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_below="@id/txt_holiday_name"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/ll_custombtn_leave_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:background="#2571FF"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apply For Leave"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/ll_custombtn_od_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:background="#2571FF"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apply For OD"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>
                <!--Calendar Details, code ends -->


            </LinearLayout>

        </ScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
   <!-- <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/activity_main_drawer" /> -->

</androidx.drawerlayout.widget.DrawerLayout>