<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout_chng_pwd"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="#2e5772">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="Current Password"/>
            <EditText
                android:id="@+id/ed_current_password"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/layout6"
                android:layout_height="35dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize="18dp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="New Password"/>
            <EditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/layout6"
                android:layout_height="35dp"
                android:singleLine="true"
                android:textSize="18dp"
                android:inputType="textPassword" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="Retype New Password"/>
            <EditText
                android:id="@+id/edt_retype_password"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/layout6"
                android:layout_height="35dp"
                android:singleLine="true"
                android:textSize="18dp"
                android:inputType="textPassword"/>
            <TextView
                android:id="@+id/tv_pswd_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="13dp"/>
            <!--<TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="Enter Password Hint"/>

                <EditText
                    android:id="@+id/ed_password_hint"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:layout_height="35dp"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:textSize="18dp" /> -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#AAA8A8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <RelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:textColor="#3A3838"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:text="Cancel"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#AAA8A8"/>
            <RelativeLayout
                android:id="@+id/rl_submit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textAllCaps="false"
                    android:textColor="#3A3838"
                    android:layout_centerInParent="true"
                    android:text="Submit"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>