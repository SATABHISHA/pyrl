<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="#CDCDCD"
    android:paddingLeft="20dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/workplan"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_logo"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              P A  Y  R  O  L  L"
        android:id="@+id/tct_payroll"
        android:textColor="#868F95"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp">l</TextView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/woman"
        android:id="@+id/img_userprofile"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tct_payroll"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/tv_fullname"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_userprofile"
        android:layout_marginTop="5dp"

        android:textColor="#2e5772"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#66818a"
        android:gravity="center"
        android:id="@+id/tv_companynam"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_below="@id/tv_fullname"></TextView>








</RelativeLayout>