<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/activity_mediclaim_amount_balance_titlebar_custom_shape">

                <TextView
                    android:id="@+id/tv_accountcode"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Alert!"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="normal" />

            </RelativeLayout>
            <TextView
                android:id="@+id/ed_note"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:text="Any unsaved data will be lost.\n Do you still want to continue?"
                android:gravity="center"
                android:textColor="#4f4f4f"
                android:textSize="18sp"
                android:background="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/activity_mediclaim_amount_balance_bottom_custom_shape"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_yes_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/activity_chng_pswd_cancelbtn_custom_shape"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Yes"
                    android:textColor="#4f4f4f"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:gravity="center"
                    android:text="Go to Dashboard"
                    android:textColor="#5B5B5B"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="#c2c2c2"></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_yes_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Yes"
                        android:textColor="#4f4f4f"
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:textColor="#5B5B5B"
                        android:text="Go to List"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="#c2c2c2"/>
            <LinearLayout
                android:id="@+id/ll_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/activity_chng_pwd_submitbtn_custom_shape"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="#4f4f4f"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:gravity="center"
                    android:textColor="#5B5B5B"
                    android:text="Stay Back"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>