<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#00ffffff"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/activity_mediclaim_amount_balance_titlebar_custom_shape">

                <TextView
                    android:id="@+id/tv_accountcode"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="2dp"
                    android:text="Select Month and Year"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="normal" />
                <ImageView
                    android:id="@+id/img_view_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/cross"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="2.5dp"
                    android:background="@drawable/layout6">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="0dp"
                        android:layout_marginRight="8dp"
                        android:gravity="left"
                        app:ms_multiline="false"
                        app:ms_hintColor="#3C3C3C"
                        app:ms_hintTextSize="15sp"
                        app:ms_enableFloatingLabel="false"
                        app:ms_enableErrorLabel="false"
                        app:ms_thickness="0dp"
                        app:ms_arrowColor="#c2c2c2"
                        app:ms_arrowSize="16dp"
                        app:ms_alignLabels="false"
                        android:layout_gravity="center"
                        android:overlapAnchor="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout6">
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:gravity="left"
                        app:ms_multiline="false"
                        app:ms_hintColor="#3C3C3C"
                        app:ms_hintTextSize="15sp"
                        app:ms_enableFloatingLabel="false"
                        app:ms_enableErrorLabel="false"
                        app:ms_thickness="0dp"
                        app:ms_arrowColor="#c2c2c2"
                        app:ms_arrowSize="16dp"
                        app:ms_alignLabels="false"
                        android:layout_gravity="center"
                        android:overlapAnchor="false"/>
                </LinearLayout>

            </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>
        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/activity_salary_report_custombtn_shape"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_button_continue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#2E2E2E"
                android:layout_weight="1"
                android:background="@drawable/activity_salary_report_custombtn_shape"
                android:text="Continue"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>