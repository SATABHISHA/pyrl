<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_12"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app"
            android:background="#2e5772"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2e5772">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Leave Balance"
                    android:textColor="#fff"
                    android:textSize="18sp"></TextView>

            </androidx.appcompat.widget.Toolbar>
            <!-- android:background="?attr/colorPrimary"-->

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"

            android:layout_below="@id/app"
            android:id="@+id/ll_1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Year"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#DDDDDD"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_weight="1">

            </TextView>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:id="@+id/spinner1"
                android:background="@drawable/layout4"
                android:layout_weight="1"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Casual Leave "
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/tv_casual_leave"
                android:textColor="#6C89E7"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Earn Leave "
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/tv_earn_leav"
                android:textColor="#6C89E7"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sick Leave "
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/tv_sick_leave"
                android:textColor="#6C89E7"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Comp Off "
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/tv_comp_off"
                android:textColor="#6C89E7"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Maternal Leave "
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/tv_matarnal_leave"
                android:textColor="#6C89E7"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Paternal Leave "
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/tv_paternal_leave"
                android:textColor="#6C89E7"></TextView>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_leave"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:background="@drawable/layout9"
                    android:text="My Leave
                    Application"

                    android:textAlignment="center"
                    android:textColor="#4A6688"
                    android:textSize="15sp"

                    ></Button>



                <Button
                    android:id="@+id/btn_subordinate"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout9"
                    android:text="Subordinate Leave
                     Approval"
                    android:textAlignment="center"
                    android:textColor="#4A6688"
                    android:textSize="15sp"

                    ></Button>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>