<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F"
            android:textSize="18sp">

        </TextView>

        <ImageView
            android:id="@+id/img_pdf_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_index"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/file_pdf"></ImageView>

        <TextView
            android:id="@+id/tv_pdf_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/img_pdf_icon_delete"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_pdf_icon"
            android:text="202175-Doc-1.pdf"></TextView>

        <TextView
            android:id="@+id/tv_pdf_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:layout_toRightOf="@id/img_pdf_icon"
            android:layout_below="@id/tv_pdf_file"
            android:text="22 KB"></TextView>
        <View
            android:id="@+id/view1"
            android:layout_below="@id/tv_pdf_file_size"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#C3C3C3"></View>
        <ImageView
            android:id="@+id/img_pdf_icon_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:visibility="invisible"
            android:src="@drawable/delete_record_od_request"></ImageView>
    </RelativeLayout>

</RelativeLayout>