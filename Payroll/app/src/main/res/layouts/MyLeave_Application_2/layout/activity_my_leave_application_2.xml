<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2e5772"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2e5772">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/leave_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:textColor="#fff"
                        android:textSize="18sp"></TextView>

                    <ImageView
                        android:id="@+id/entry_form"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/entry_form"
                        android:visibility="gone"></ImageView>

                    <ImageView
                        android:id="@+id/img_list"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/entry_form"
                        android:src="@drawable/list"
                        android:visibility="gone"></ImageView>
                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>
            <!-- android:background="?attr/colorPrimary"-->

        </com.google.android.material.appbar.AppBarLayout>

        <!--        <ScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_below="@id/app"-->
        <!--            android:layout_marginBottom="50dp"-->
        <!--            android:scrollbars="none">-->
        <!--        </ScrollView>-->




        <LinearLayout
            android:id="@+id/ll_save_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/layout6"
                android:text="CANCEL"
                android:textColor="#2e5772"
                android:textSize="15sp">

            </Button>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/layout6"
                android:text="SAVE"
                android:textColor="#2e5772"
                android:textSize="15sp">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llone_save_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel_sub"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/layout6"
                android:text="CANCEL"
                android:textColor="#2e5772"
                android:textSize="15sp">

            </Button>

            <Button
                android:id="@+id/btn_save_sub"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/layout6"
                android:text="SAVE"
                android:textColor="#2e5772"
                android:textSize="15sp">

            </Button>


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app"
            android:layout_marginBottom="60dp"
            android:scrollbars="none"
            android:fillViewport="true">
            <RelativeLayout

                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app"
                android:padding="15dp"

                app:layout_anchorGravity="center">


                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Employee Name "
                    android:textColor="#788087"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_emp_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/txt_name"
                    android:background="@drawable/layout6"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#ED8A8A8A"
                    android:textSize="15sp">

                </TextView>


                <TextView
                    android:id="@+id/txt_leave_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="28dp"
                    android:text="Leave Type  "
                    android:textColor="#788087"
                    android:textSize="15sp">

                </TextView>

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/txt_emp_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/txt_name"
                    android:layout_weight="0"
                    android:background="@drawable/layout8"></Spinner>


                <TextView
                    android:id="@+id/txt_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_leave_type"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="25dp"
                    android:text="From"
                    android:textColor="#788087"
                    android:textSize="15sp">

                </TextView>

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/txt_total"
                    android:layout_toRightOf="@id/txt_name"
                    android:background="@drawable/layout6">

                    <RelativeLayout
                        android:id="@+id/rl_from"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:visibility="gone"

                        >

                        <TextView
                            android:id="@+id/txt_from_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="">


                        </TextView>

                        <ImageView
                            android:id="@+id/cal1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"

                            android:padding="10dp"
                            android:src="@drawable/ee">

                        </ImageView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_from_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        >

                        <TextView
                            android:id="@+id/txt_from_date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"

                            android:layout_marginLeft="5dp"
                            android:text="">


                        </TextView>

                        <ImageView

                            android:layout_width="35dp"
                            android:layout_height="35dp"

                            android:layout_alignParentRight="true"
                            android:padding="10dp"

                            android:src="@drawable/ee"
                            android:visibility="gone">

                        </ImageView>


                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/txt_leave_type"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"


                    android:background="@drawable/layout10"
                    android:text="Total"
                    android:textAlignment="center">

                </TextView>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="62.8dp"
                    android:layout_below="@id/txt_total"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/layout6">

                    <TextView
                        android:id="@+id/txt_total_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:id="@+id/txt_dayss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_total_number"
                        android:layout_centerHorizontal="true"
                        android:text="Day(s)"
                        android:textColor="#939393"
                        android:textSize="10sp">

                    </TextView>
                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_from"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="25dp"
                    android:text="To"
                    android:textColor="#788087"
                    android:textSize="15sp">

                </TextView>

                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/txt_total"
                    android:layout_toRightOf="@id/txt_name"
                    android:background="@drawable/layout6"


                    >


                    <RelativeLayout
                        android:id="@+id/rl_to"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_to_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="">


                        </TextView>

                        <ImageView
                            android:id="@+id/cal2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"

                            android:padding="10dp"
                            android:src="@drawable/ee">

                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_to_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        >

                        <TextView
                            android:id="@+id/txt_to_date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="">


                        </TextView>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:padding="10dp"

                            android:src="@drawable/ee"
                            android:visibility="invisible">

                        </ImageView>
                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_to"
                    android:layout_marginTop="34dp"
                    android:text="Details"
                    android:textColor="#788087"
                    android:textSize="15sp"></TextView>

                <RelativeLayout
                    android:id="@+id/txt_check_leave"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/rl_3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/txt_name"
                    android:background="@drawable/layout7"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_leave_inner"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:src="@drawable/leave_balance_inner">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="9dp"
                        android:gravity="center"
                        android:text="Check Leave Balance"
                        android:textColor="#000">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_details"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/leave_details"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"

                        android:background="@drawable/layout6">

                        <EditText
                            android:id="@+id/ed_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:background="@null">

                        </EditText>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supervisor_details"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/layout6"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_details1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="5dp">

                        </TextView>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_4"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt_super"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supervisor Remark"
                        android:textColor="#788087"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/tv_supervisor_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_super"
                        android:text=""
                        android:textColor="#939393"
                        android:textSize="12sp"

                        ></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_5"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:id="@+id/leave_super"

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/layout6"

                        android:visibility="gone"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"

                            >

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/subordinate_super"

                        android:layout_width="match_parent"
                        android:layout_height="60dp"


                        android:background="@drawable/layout6"

                        >

                        <EditText
                            android:id="@+id/ed_supervisor_remark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="top"
                            android:text=""
                            android:background="@null"
                            android:focusableInTouchMode="true"
                            android:clickable="true"

                            >

                        </EditText>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_6"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt_final_super"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Final Supervisor Remark "
                        android:textColor="#788087"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/tv_final_supervisor_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_final_super"
                        android:text=""
                        android:textColor="#939393"
                        android:textSize="12sp"

                        ></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_7"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:id="@+id/leave_final"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/layout6"


                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"

                            >

                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/subordinate_final"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"


                        android:background="@drawable/layout6">

                        <EditText
                            android:id="@+id/ed_final_supervisor_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:background="@null"

                            >

                        </EditText>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_8"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt_application_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Application Type"
                        android:textColor="#788087"
                        android:textSize="15sp">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/rb_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/txt_application_type"

                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb1"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save">

                            </RadioButton>

                            <RadioButton
                                android:id="@+id/rb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/rb1"
                                android:text="Submit">

                            </RadioButton>
                        </RadioGroup>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/submit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/txt_application_type">

                        <TextView
                            android:id="@+id/txt_application_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="submit"
                            android:textSize="15sp"></TextView>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_9"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt_leave_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Leave Status"
                        android:textColor="#788087"
                        android:textSize="15sp">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/txt_approved"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="55dp"
                        android:layout_toRightOf="@id/txt_leave_status"
                        android:background="@drawable/layout6"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_leave_status1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="#4D840A"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/spiner_approved"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginLeft="55dp"
                        android:layout_toRightOf="@id/txt_leave_status"
                        android:background="@drawable/layout6">

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"


                            android:layout_weight="0"
                            android:background="@drawable/layout8"></Spinner>


                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>