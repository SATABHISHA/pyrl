<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/coordinatorLayout"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5">

            <ImageView
                android:id="@+id/img_wrkpln"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/workplan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:text="                P  A   Y   R   O   L   L"
                android:textSize="13sp"/>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="#2e84bd">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/corp_id"
                    android:scaleType="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15">

                <EditText
                    android:id="@+id/ed_userid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layouts"
                    android:paddingLeft="10dp"
                    android:hint="Corporate ID"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="#2e84bd">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/username"
                    android:scaleType="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15">

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layouts"
                    android:paddingLeft="10dp"
                    android:hint="Username"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="#2e84bd">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/password" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15">

                <EditText
                    android:id="@+id/ed_userpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layouts"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="#2e5772"
            android:text="Login"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checked_sign"
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Stay signed in"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#FF2e5772"
                    android:gravity="center|left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:layout_weight="40">
                <TextView
                    android:id="@+id/activity_login_btn_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Can't access your account ?"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#BDBEBE"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Version 1.2020.11.09"
            android:textSize="11sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright \u00a9 2020 ARB Software India Pvt Ltd"
            android:textColor="#505050"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

</RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>