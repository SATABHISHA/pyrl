<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/ll_btns"
                android:textSize="17sp"
                android:textColor="#484848"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Ashok Ghosh"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_task_name"
                android:layout_toLeftOf="@id/ll_btns"
                android:textSize="15sp"
                android:textColor="#7B7A7A"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="2020-May-06"/>

            <LinearLayout
                android:id="@+id/ll_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
            <Button
                android:id="@+id/btn_edit_task"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:background="@drawable/edit_record"/>

            <Button
                android:id="@+id/btn_delete_task"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:background="@drawable/delete_record"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_border"
                android:layout_below="@id/tv_description"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="#dcdcdc"/>


        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>