<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/app"
        android:background="#2e5772"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_back"
                android:text="My OD Duty Log"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/backarrow" />

        </RelativeLayout>
        <!-- <androidx.appcompat.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="#2e5772">

         </androidx.appcompat.widget.Toolbar> -->
        <!-- android:background="?attr/colorPrimary"-->

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
      <RelativeLayout
          android:id="@+id/rl_task_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="20dp"
          android:paddingRight="18dp"
          android:paddingTop="20dp"
          android:visibility="gone">
          <TextView
              android:id="@+id/tv_tile"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Today's OD DUTY"
              android:layout_alignParentTop="true"
              android:textSize="17sp"
              android:layout_toLeftOf="@id/ll_buttons"
              android:layout_marginRight="10dp"
              android:textColor="#1182d5"/>
          <TextView
              android:id="@+id/tv_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_below="@id/tv_tile"
              android:textSize="15sp"
              android:text="2020-Jun-05"/>
          <LinearLayout
              android:id="@+id/ll_buttons"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:orientation="horizontal">
              <RelativeLayout
                  android:id="@+id/rl_start"
                  android:layout_width="80dp"
                  android:layout_height="52dp"
                  android:background="@drawable/od_duty_buttonshape_start">
                  <ImageView
                      android:id="@+id/img_start"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:background="@drawable/od_start"
                      android:layout_marginTop="5dp"
                      android:layout_centerHorizontal="true"/>

                  <TextView
                      android:id="@+id/tv_start"
                      android:layout_width="80dp"
                      android:layout_height="48dp"
                      android:gravity="bottom|center_horizontal"
                      android:text="START"
                      android:textColor="#686666"
                      android:textSize="15sp"
                      android:visibility="visible" />
              </RelativeLayout>
            <!--  <TextView
                  android:id="@+id/tv_start"
                  android:layout_width="80dp"
                  android:layout_height="48dp"
                  android:gravity="center"
                  android:textSize="17sp"
                  android:visibility="visible"
                  android:textColor="#686666"
                  android:background="#dce9ab"
                  android:text="START"/> -->
              <RelativeLayout
                  android:id="@+id/rl_pause"
                  android:layout_width="80dp"
                  android:layout_height="52dp"
                  android:background="@drawable/od_duty_buttonshape_pause">
                  <ImageView
                      android:id="@+id/img_pause"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:background="@drawable/od_pause"
                      android:layout_marginTop="5dp"
                      android:layout_centerHorizontal="true"/>
                  <TextView
                      android:id="@+id/tv_pause"
                      android:layout_width="80dp"
                      android:layout_height="48dp"
                      android:gravity="bottom|center_horizontal"
                      android:textSize="15sp"
                      android:visibility="visible"
                      android:textColor="#686666"
                      android:text="PAUSE"/>
              </RelativeLayout>
              <!--<TextView
                  android:id="@+id/tv_pause"
                  android:layout_width="80dp"
                  android:layout_height="48dp"
                  android:gravity="center"
                  android:textSize="17sp"
                  android:visibility="visible"
                  android:textColor="#686666"
                  android:background="#ffffff"
                  android:text="PAUSE"/> -->

              <RelativeLayout
                  android:id="@+id/rl_stop"
                  android:layout_width="80dp"
                  android:layout_height="52dp"
                  android:layout_marginLeft="7dp"
                  android:background="@drawable/od_duty_buttonshape_stop">
                  <ImageView
                      android:id="@+id/img_stop"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:background="@drawable/od_stop"
                      android:layout_marginTop="5dp"
                      android:layout_centerHorizontal="true"/>
                  <TextView
                      android:id="@+id/tv_stop"
                      android:layout_width="80dp"
                      android:layout_height="48dp"
                      android:gravity="bottom|center_horizontal"
                      android:textSize="15sp"
                      android:visibility="visible"
                      android:textColor="#686666"
                      android:text="STOP"/>
              </RelativeLayout>
            <!--  <TextView
                  android:id="@+id/tv_stop"
                  android:layout_width="80dp"
                  android:layout_height="48dp"
                  android:layout_marginLeft="2dp"
                  android:textColor="#686666"
                  android:gravity="center"
                  android:textSize="17sp"
                  android:visibility="visible"
                  android:background="#febbaf"
                  android:text="STOP"/> -->
          </LinearLayout>
          <LinearLayout
              android:id="@+id/ll_border"
              android:layout_width="match_parent"
              android:layout_marginTop="20dp"
              android:layout_height="1dp"
              android:layout_below="@id/tv_date"
              android:orientation="vertical"
              android:background="#dcdcdc"/>
      </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_button"
            android:layout_below="@id/rl_task_status"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="0dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            app:cardUseCompatPadding="false">
            <TextView
                android:id="@+id/tv_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="No record found"/>
            <LinearLayout
                android:id="@+id/ll_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:scrollbars="vertical" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/layout6">
            <TextView
                android:id="@+id/tv_button_subordinate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#2e5772"
                android:text="Subordinate OD Duty Log"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>