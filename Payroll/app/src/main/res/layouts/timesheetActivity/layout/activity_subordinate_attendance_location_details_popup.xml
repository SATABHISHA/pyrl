<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="#2e5772">
                <TextView
                    android:id="@+id/tv_accountcode"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:text="Attendance Detail"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/tv_employee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:text="B BAN"/>
                <TextView
                    android:id="@+id/tv_employee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_gravity="center"
                    android:textColor="#404040"
                    android:text="A"/>
                <TextView
                    android:id="@+id/tv_attendance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#404040"
                    android:text="2021"/>
                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical|center"
                    android:orientation="vertical"
                    android:background="@drawable/loglist_corner_radius_present">
                    <TextView
                        android:id="@+id/tv_present_absent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="Present"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_location_in_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/tv_in"
                        android:layout_width="55dp"
                        android:layout_height="81dp"
                        android:layout_marginLeft="10dp"
                        android:text="IN"
                        android:gravity="center"
                        android:background="#DFDFDF"
                        android:textColor="#4D4D4D"/>
                    <ImageView
                        android:id="@+id/img_view_in"
                        android:layout_width="55dp"
                        android:layout_height="81dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_in"
                        android:layout_toLeftOf="@id/img_view_in"
                        android:layout_marginTop="-1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="12:46PM"
                        android:textColor="#616161"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Latitude:"
                                android:textSize="10sp"
                                android:textColor="#7F7F7F"/>
                            <TextView
                                android:id="@+id/tv_latitude_in"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22.504725"
                                android:textSize="10sp"
                                android:textColor="#A5A5A5"/>
                        </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Longitude:"
                                    android:textSize="10sp"
                                    android:textColor="#7F7F7F"/>
                                <TextView
                                    android:id="@+id/tv_longitude_in"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22.504725"
                                    android:textSize="10sp"
                                    android:textColor="#A5A5A5"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_in_address"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_marginTop="5dp"
                            android:text="81/3, Haltu, Purbachal Main Road, Kolkata India, 700078,Kolkata India, 700078Kolkata India, 700078"
                            android:textColor="#7F7F7F"
                            android:maxLines="2"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </RelativeLayout>

                <!--out location details, starts -->
                <RelativeLayout
                    android:id="@+id/rl_location_out_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/tv_out"
                        android:layout_width="55dp"
                        android:layout_height="81dp"
                        android:layout_marginLeft="10dp"
                        android:text="OUT"
                        android:gravity="center"
                        android:background="#DFDFDF"
                        android:textColor="#4D4D4D"/>
                    <ImageView
                        android:id="@+id/img_view_out"
                        android:layout_width="55dp"
                        android:layout_height="81dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_out"
                        android:layout_toLeftOf="@id/img_view_out"
                        android:layout_marginTop="-1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_out_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="12:46PM"
                            android:textColor="#616161"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_title_out_latitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Latitude:"
                                    android:textSize="10sp"
                                    android:textColor="#7F7F7F"/>
                                <TextView
                                    android:id="@+id/tv_latitude_out"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22.504725"
                                    android:textSize="10sp"
                                    android:textColor="#A5A5A5"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_title_out_longitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Longitude:"
                                    android:textSize="10sp"
                                    android:textColor="#7F7F7F"/>
                                <TextView
                                    android:id="@+id/tv_longitude_out"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22.504725"
                                    android:textSize="10sp"
                                    android:textColor="#A5A5A5"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_address_out"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_marginTop="5dp"
                            android:text="81/3, Haltu, Purbachal Main Road, Kolkata India, 700078"
                            android:textColor="#7F7F7F"
                            android:maxLines="2"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </RelativeLayout>
                <!--out location details, ends -->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_button_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#2E2E2E"
                android:layout_weight="1"
                android:background="@drawable/top_border_button"
                android:text="OK"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>