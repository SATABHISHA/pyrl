<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#D1D1D1">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="0.6dp"
            android:background="#ffffff"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14-Aug-2020"
                android:textColor="#565555"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/img_view_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_in_time"
                android:layout_toRightOf="@id/tv_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-7dp"
                android:visibility="visible"
                android:src="@drawable/hometimesheet"/>
            <TextView
                android:id="@+id/tv_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textColor="#565555"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_out_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30 PM"
                android:textColor="#565555"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textSize="15sp"/>


            <!--  <LinearLayout
                  android:id="@+id/ll_border"
                  android:layout_below="@id/tv_date"
                  android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
                  android:layout_height="1dp"
                  android:orientation="vertical"
                  android:background="#dcdcdc"/> -->


        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>